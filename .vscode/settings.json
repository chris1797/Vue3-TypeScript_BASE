{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.workingDirectories": [
    // 보통 이렇게 디렉토리 설정을 안해서 자동고침이 안된다
    { "mode": "auto" }
  ],
  "editor.tabSize": 2
}
